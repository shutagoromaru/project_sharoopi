<p>これはeditです</p>

    <%= form_with(url: update_user_profile_path, model: @user_profile, local: true, method: :post, html: { class: 'post-form' }) do |f| %>

        <div class="form-group">
          <%= f.label "名前", class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "ホームページURL", class: 'form-label' %>
          <%= f.text_area :url, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "自己紹介", class: 'form-label' %>
          <%= f.text_area :self_introduction, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label "得意分野", class: 'form-label' %>
          <%= f.text_area :special, class: 'form-control' %>
        </div>

        <div class="form-group image-upload">
          <%= f.label "画像", class: 'form-label' %>
          <div class="image-preview" id="imagePreview">
            <img src="" alt="Image Preview" class="image-preview__image">
            <span class="image-preview__default-text">Image will be displayed here</span>
          </div>
          <%= f.file_field :image, class: 'form-control-file', id: 'imageUpload' %>
        </div>
	    <%= f.submit '登録', class: 'submit-button' %>
    <% end %> 